<h1 align="center">Log in</h1>

<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url:login_path) do |f| %>
	<div class="form-group">
		<div class="control-label col-sm-4">
			<%= f.label :email %>
		</div>
		<div class="col-sm-4">
			<%= f.email_field :email, class: "form-control", placeholder: "Enter email address", autofocus: "on" %>
		</div>
	</div>
	<div class="form-group">
		<div class="control-label col-sm-4">
			<%= f.label :password %>
		</div>
		<div class="col-sm-4">
			<%= f.password_field :password, class: "form-control", autocomplete: "off" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-4 col-sm-4">
			<%= f.submit "Log in", class: "btn btn-primary btn-lg btn-block" %>
		</div>
	</div>
<% end %> 
<div align="center">
	[ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
</div>
