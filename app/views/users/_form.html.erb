<%= render 'shared/errors', obj: @user %>

<div class="row">
	<div class="col-xs-12">
		<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
		<div class="form-group">
			<div class="control-label col-sm-4"> 
				<%= f.label :username %>
			</div>
			<div class="col-sm-4">
			<%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
			</div>
		</div>
		<div class="form-group">
			<div class="control-label col-sm-4">
				<%= f.label :email %>
			</div>
			<div class="col-sm-4">
				<%= f.email_field :email, class: "form-control", placeholder: "Enter email address" %>
			</div>
		</div>
		<div class="form-group">
			<div class="control-label col-sm-4">
				<%= f.label :password %>
			</div>
			<div class="col-sm-4">
				<%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-4 col-sm-4">
				<%= f.submit(@user.new_record? ? "Sign up" : "Update Account", class: "btn btn-primary btn-lg btn-block") %>
			</div>
		</div>
		<% end %>
		<div align="center">
			[ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
		</div>
		<!--		
		<div class="cols-xs-4 col-xs-offset-4">
			[ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
		</div> -->
	</div> 
</div> 